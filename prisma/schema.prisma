generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Products{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  price String
  stock String
  image String?
  desc String?
  category Category? @relation(fields: [caregoryId], references: [id])
  caregoryId String? @db.ObjectId
}

model Category{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  products Products[]
}