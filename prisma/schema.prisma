generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Products {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  price       String
  stock       String
  image       String?
  desc        String?
  category    Category? @relation(fields: [caregoryId], references: [id])
  caregoryId  String?   @db.ObjectId
  create_data DateTime  @default(now())
  discount  Discount? @relation(fields: [discountId],references: [id])
  discountId String? @db.ObjectId
}

model Category {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  products    Products[]
  create_data DateTime   @default(now())
}

model Banners {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  image String
  type        String?
  create_data DateTime @default(now())
}

model Admin{
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  username String
  password String
  created_at DateTime @default(now())
  token String?
}

model Discount{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  discount_name String
  value Int
  valType String
  picture String
  product Products[]
  create_date DateTime @default(now())
}

model Users{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String 
  email String
  picture String?
  orders Orders? @relation(fields: [orderId],references: [id])
  orderId String? @db.ObjectId
}

model Orders{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  user Users[]
  details Json
  create_date DateTime @default(now())
}